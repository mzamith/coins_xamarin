<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="coins.CoinList" Title="Page 1" Icon="ic_format_list_bulleted.png">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness" iOS="20,40,20,20" Android="20,20,20,20" WinPhone="20,20,20,20" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical" Spacing="20">
			<Label Text="Just Do It!" HorizontalOptions="Center" TextColor="White" />
			<Entry x:Name="taskText" Placeholder="Enter task..." />
			<Button x:Name="saveButton" Text="Save" FontSize="24" IsEnabled="true" Clicked="OnSaveClicked" TextColor="White" BackgroundColor="Transparent" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>