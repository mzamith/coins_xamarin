<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="coins.View.SearchPage" Title="Search">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <SearchBar x:Name="sbSearch" Placeholder="Search" TextChanged="FilterList" />
            <ListView x:Name="listViewSearch" RowHeight="50">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="1,1,1,1" HorizontalOptions="StartAndExpand" Orientation="Horizontal">
                                <Image Source="{Binding Flag}" WidthRequest="30"></Image>
                                <Label Text="{Binding Code}" YAlign="Center" HorizontalOptions="Start" FontSize="Medium" TextColor="Black" />
                                <Label Text="{Binding Symbol}" YAlign="Center" FontSize="Small" TextColor="Black" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>