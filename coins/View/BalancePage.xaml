<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="coins.View.BalancePage" Title="Balance">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness" iOS="20,40,20,20" Android="20,20,20,20" WinPhone="20,20,20,20" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical" Spacing="20">
			<Label Text="Tax Getter" HorizontalOptions="Center" TextColor="Black" />
			<Entry x:Name="taskText2" Placeholder="Enter coin code..." />
			<Button x:Name="saveButton2" Text="Save" FontSize="24" IsEnabled="true" Clicked="OnSaveClicked" TextColor="Blue" BackgroundColor="Transparent" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>